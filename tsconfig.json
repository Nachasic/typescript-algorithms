{
  "compilerOptions": {
    "strict": true,
    "lib": ["es6"],
    "module": "commonjs",
    "declaration": true,
    "importHelpers": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "paths": {
      "@structures/*": ["src/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
